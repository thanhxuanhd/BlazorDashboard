@if (Model is not null)
{
    <tr class="border">
        <td class="items-center text-center md:w-40">
            <span class="bg-gray-200 p-2 w-20 text-sm text-gray-700 rounded-lg">@Model.Id</span>
        </td>
        <td class="px-4 py-2">
            <div>
                @Model.Username
            </div>
            <div class="text-gray-500">@Model.Email</div>
        </td>
        <td class="px-4 py-2">
            <span class="bg-gray-200 p-2 w-20 text-sm text-gray-700 rounded-lg">
                @Model.Authorities
            </span>
        </td>
        <td class="px-4 py-2">
            <div>
                @Model.CreatedBy
            </div>
            <div class="text-gray-500">
                @Model.CreatedDate.ToShortDateString()
            </div>
        </td>
        <td class="px-4 py-2">
            @Model.ModifiedBy
        </td>
        <td class="px-4 py-2 md:w-40">
            @if (Model.Status)
            {
                <span class="bg-green-200 p-2 w-20 text-sm text-green-600 rounded-lg">
                    @GetStatus(Model.Status)
                </span>
            }
            else
            {
                <span class="bg-red-200 p-2 w-20 text-sm text-red-600 rounded-lg">
                    @GetStatus(Model.Status)
                </span>
            }
        </td>
        <td class="px-4 py-2 md:w-40 flex justify-center">
            <span class="p-2" title="Edit">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M17.5116 1.24394C17.9021 0.853419 18.5353 0.853419 18.9258 1.24394L23.1685 5.48657C23.356 5.67411 23.4613 5.92846 23.4613 6.19368C23.4613 6.4589 23.356 6.71325 23.1685 6.90079L18.9264 11.1429C18.9262 11.1431 18.926 11.1432 18.9258 11.1434C18.9256 11.1436 18.9254 11.1438 18.9252 11.144L7.61211 22.4571C7.42456 22.6447 7.1702 22.75 6.90498 22.75L2.66246 22.7499C2.1102 22.7499 1.6625 22.3022 1.66248 21.75L1.66235 17.5074C1.66235 17.2422 1.7677 16.9878 1.95525 16.8003L13.2657 5.48985C13.2668 5.48876 13.2679 5.48766 13.2689 5.48657C13.27 5.48548 13.2711 5.4844 13.2722 5.48331L17.5116 1.24394ZM13.9761 7.6079L3.66237 17.9216L3.66245 20.75L6.49079 20.75L16.8045 10.4363L13.9761 7.6079ZM18.2187 9.02211L15.3903 6.19369L18.2187 3.36526L21.0471 6.19368L18.2187 9.02211Z" fill="blue" fill-opacity="0.85" />
                </svg>
            </span>
            <span class="p-2" title="Delete">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M3.29289 3.29289C3.68342 2.90237 4.31658 2.90237 4.70711 3.29289L12 10.5858L19.2929 3.29289C19.6834 2.90237 20.3166 2.90237 20.7071 3.29289C21.0976 3.68342 21.0976 4.31658 20.7071 4.70711L13.4142 12L20.7071 19.2929C21.0976 19.6834 21.0976 20.3166 20.7071 20.7071C20.3166 21.0976 19.6834 21.0976 19.2929 20.7071L12 13.4142L4.70711 20.7071C4.31658 21.0976 3.68342 21.0976 3.29289 20.7071C2.90237 20.3166 2.90237 19.6834 3.29289 19.2929L10.5858 12L3.29289 4.70711C2.90237 4.31658 2.90237 3.68342 3.29289 3.29289Z" fill="red" fill-opacity="0.85" />
                </svg>
            </span>
        </td>
    </tr>
}


@code {
    [Parameter]
    public User Model { get; set; }

    private string GetStatus(bool status)
    {
        return status ? "ACTIVATED" : "NOT ACTIVATED";
    }
}
