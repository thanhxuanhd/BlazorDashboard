@if (Model is not null)
{
    <tr class="border">
        <td class="items-center text-center md:w-40">
            <span class="bg-gray-200 p-2 w-20 text-sm text-gray-700 rounded-lg">@Model.Id</span>
        </td>
        <td class="px-4 py-2">
            <div>
                @Model.Username
            </div>
            <div class="text-gray-500">@Model.Email</div>
        </td>
        <td class="px-4 py-2">
            <span class="bg-gray-200 p-2 w-20 text-sm text-gray-700 rounded-lg font-bold">
                @Model.Authorities
            </span>
        </td>
        <td class="px-4 py-2">
            <div>
                @Model.CreatedBy
            </div>
            <div class="text-gray-500">
                @Model.CreatedDate.ToShortDateString()
            </div>
        </td>
        <td class="px-4 py-2">
            @Model.ModifiedBy
        </td>
        <td class="px-4 py-2 md:w-40">
            @if (Model.Status)
            {
                <span class="bg-green-100 p-2 text-sm w-20 text-green-700 rounded-lg font-bold">
                    @GetStatus(Model.Status)
                </span>
            }
            else
            {
                <span class="bg-red-100 p-2 w-20 text-sm text-red-700 rounded-lg font-bold">
